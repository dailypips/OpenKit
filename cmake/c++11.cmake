if(CMAKE_COMPILER_IS_GNUCXX)
   execute_process(COMMAND ${CMAKE_C_COMPILER} -dumpversion OUTPUT_VARIABLE GCC_VERSION)
   if(GCC_VERSION VERSION_GREATER 4.7 OR GCC_VERSION VERSION_EQUAL 4.7)
        message(STATUS "C++11 support")
        list(APPEND CMAKE_CXX_FLAGS "-std=gnu++11")
   else()
        message(FATAL_ERROR "C++11 needed. Therefore a gcc compiler with a version higher than 4.3 is needed.")
   endif()
elseif("${CMAKE_CXX_COMPILER_ID}" MATCHES "Clang")
    execute_process(COMMAND ${CMAKE_C_COMPILER} -dumpversion OUTPUT_VARIABLE CLANG_VERSION)
    if (CLANG_VERSION VERSION_GREATER 4.2 OR CLANG_VERSION VERSION_EQUAL 4.2)
        message(STATUS "C++11 support")
        list(APPEND CMAKE_CXX_FLAGS "-std=c++11 -stdlib=libc++")
    else()
        message(FATAL_ERROR "C++11 needed. Therefore a clang compiler with a version higher than 6.0 is needed.")
    endif()
else()
    message(FATAL_ERROR "Unknown CXX Compiler")
endif(CMAKE_COMPILER_IS_GNUCXX)
